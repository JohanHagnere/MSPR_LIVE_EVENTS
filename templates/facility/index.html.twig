{% extends 'base.html.twig' %}

{% block title %}Facility index{% endblock %}

{% block body %}
    <h1>Facility index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category</th>
                <th>Name</th>
                <th>Longitude</th>
                <th>Latitude</th>
                <th>Img</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for facility in facilities %}
            <tr>
                <td>{{ facility.id }}</td>
                <td>{{ facility.category }}</td>
                <td>{{ facility.name }}</td>
                <td>{{ facility.longitude }}</td>
                <td>{{ facility.latitude }}</td>
                <td>{{ facility.img }}</td>
                <td>{{ facility.description }}</td>
                <td>
                    <a href="{{ path('app_facility_show', {'id': facility.id}) }}">show</a>
                    <a href="{{ path('app_facility_edit', {'id': facility.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_facility_new') }}">Create new</a>
{% endblock %}
