<form
  method="post"
  action="{{
    path('app_performer_delete', { id: performer.id, festival: festival.id })
  }}"
  onsubmit="return confirm('Are you sure you want to delete this item?');"
>
  <input
    type="hidden"
    name="_token"
    value="{{ csrf_token('delete' ~ performer.id) }}"
  />
  <button class="btn delete"><i class="fa-regular fa-trash-can"></i></button>
</form>
