{% extends 'base.html.twig' %} {% block title %}Concert index{% endblock %} {%
block body %}
<h1>Concert index</h1>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Concert_date</th>
      <th>actions</th>
    </tr>
  </thead>
  <tbody>
    {% for concert in concerts %}
    <tr>
      <td>{{ concert.id }}</td>
      <td>
        {{ concert.concertDate ? concert.concertDate|date('Y-m-d H:i:s') : '' }}
      </td>
      <td>
        <a
          href="{{
            path('app_concert_show', { id: concert.id, festival: festival.id })
          }}"
          >show</a
        >
        <a
          href="{{
            path('app_concert_edit', { id: concert.id, festival: festival.id })
          }}"
          >edit</a
        >
      </td>
    </tr>
    {% else %}
    <tr>
      <td colspan="3">no records found</td>
    </tr>
    {% endfor %}
  </tbody>
</table>

<a href="{{ path('app_concert_new', { festival: festival.id }) }}"
  >Create new</a
>
{% endblock %}
